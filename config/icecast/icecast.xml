<icecast>
  <!-- location and admin are two arbitrary strings -->
  <location>Earth</location>
  <admin>icemaster@localhost</admin>

  <limits>
    <clients>100</clients>
    <sources>2</sources>
    <threadpool>5</threadpool>
    <queue-size>524288</queue-size>
    <client-timeout>30</client-timeout>
    <header-timeout>15</header-timeout>
    <source-timeout>10</source-timeout>
    <burst-on-connect>1</burst-on-connect>
    <burst-size>65535</burst-size>
  </limits>

  <authentication>
    <source-password>hackme</source-password>
    <relay-password>hackme_relay</relay-password>
    <admin-user>admin</admin-user>
    <admin-password>hackme_admin</admin-password>
  </authentication>

  <!-- set the mountpoint for a shoutcast source to use, the default if not
       specified is /stream but you can change it here if alternative is
       wanted or an extension is required
       <shoutcast-mount>/live.nsv</shoutcast-mount>
  -->

  <!-- Uncomment this if you want directory listings
  <directory>
    <yp-url-timeout>15</yp-url-timeout>
    <yp-url>http://dir.xiph.org/cgi-bin/yp-cgi</yp-url>
  </directory>
  -->

  <!-- This is the hostname other people will use to connect to your server.
       It affects URLs generated by Icecast for playlists and YP.
       You MUST configure it properly for YP listing to work!
  -->
  <hostname>50.116.43.51</hostname>

  <!-- You may have multiple <listen-socket> elements -->
  <listen-socket>
    <port>8000</port>
    <bind-address>50.116.43.51</bind-address>
  </listen-socket>

  <!-- Another example socket -->
  <listen-socket>
    <port>8080</port>
  </listen-socket>

  <!-- Relaying
       You don't need this if you only have one server.
  -->
  <relay>
    <server>127.0.0.1</server>
    <port>8080</port>
    <mount>/example.ogg</mount>
    <local-mount>/different.ogg</local-mount>
    <on-demand>0</on-demand>
    <relay-shoutcast-metadata>0</relay-shoutcast-metadata>
  </relay>

  <!--
  <mount type="default">
    <public>1</public>
    <intro>/server-wide-intro.ogg</intro>
    <max-listener-duration>3600</max-listener-duration>
  </mount>

  <mount type="normal">
    <mount-name>/example2.ogg</mount-name>
    <username>othersource</username>
    <password>hackmemore</password>
    <public>1</public>
    <max-listeners>100</max-listeners>
  </mount>
  -->

  <fileserve>1</fileserve>

  <paths>
    <basedir>/usr/share/icecast2</basedir>
    <webroot>/usr/share/icecast2/web</webroot>
    <adminroot>/usr/share/icecast2/admin</adminroot>
    <logdir>/var/log/icecast2</logdir>
    <!--
      Example SSL stuff
      <ssl-certificate>/usr/share/icecast2/icecast.pem</ssl-certificate>
    -->
  </paths>

  <logging>
    <accesslog>access.log</accesslog>
    <errorlog>error.log</errorlog>
    <loglevel>3</loglevel>
    <!-- 4=debug,3=info,2=warn,1=error -->
  </logging>

  <security>
    <chroot>0</chroot>
  </security>
</icecast>
